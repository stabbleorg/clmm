{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
  },
  "include": ["packages/**/*.ts", "packages/**/package.json", "scripts/*.ts"],
  "exclude": ["dist", "node_modules"]
}
